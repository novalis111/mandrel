{
  "name": "aidis-mcp-server",
  "version": "0.1.0",
  "description": "AI Development Intelligence System - MCP Server for persistent context management",
  "main": "dist/server.js",
  "type": "module",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:integration": "vitest run tests/integration",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "format": "prettier --write 'src/**/*.{ts,js,json}'",
    "db:create": "node scripts/create-database.js",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "npm run db:drop && npm run db:create && npm run db:migrate && npm run db:seed",
    "mcp:validate": "node scripts/validate-mcp.js",
    "mcp:test": "node scripts/test-mcp.js"
  },
  "keywords": [
    "mcp",
    "ai",
    "context",
    "development",
    "intelligence",
    "postgresql",
    "vector-search"
  ],
  "author": "Brian (AIDIS Project)",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.5.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "latest",
    "@xenova/transformers": "^2.17.2",
    "dotenv": "^16.4.0",
    "pg": "^8.12.0",
    "pgvector": "^0.2.0",
    "zod": "^3.25.76"
  }
}
